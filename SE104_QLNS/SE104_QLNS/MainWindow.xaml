                                <Label Content="Chỉnh sửa quy định"
                                       FontSize="25"
                                       FontWeight="Bold"
                                       Foreground="#154448"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="Số lượng tồn tối thiểu trước khi nhập:"
                                               Foreground="#154448" FontSize="20" Margin="10,0,0,0"/>
                                        <TextBox x:Name="tbx_BookMinimumStockQuantityBeforeImporting"
                                                 Style="{StaticResource CustomerInfoTextBox}"
                                                 Width="150"
                                                 FontSize="20" 
                                                 FontWeight="Bold"
                                                 HorizontalAlignment="Left"
                                                 Margin="10"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1">
                                        <TextBlock Text="Số lượng tồn tối thiểu sau khi bán:"
                                                   Foreground="#154448" FontSize="20" Margin="10,0,0,0"/>
                                        <TextBox x:Name="tbx_BookMinimumStockQuantityAfterSelling"
                                                 Style="{StaticResource CustomerInfoTextBox}"
                                                 Width="150"
                                                 FontSize="20" 
                                                 FontWeight="Bold"
                                                 HorizontalAlignment="Left"
                                                 Margin="10"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0">
                                        <TextBlock Text="Số lượng nhập tối thiểu:"
                                               Foreground="#154448" FontSize="20" Margin="10,0,0,0"/>
                                        <TextBox x:Name="tbx_BookMinimumImportQuantity"
                                                 Style="{StaticResource CustomerInfoTextBox}"
                                                 Width="150"
                                                 FontSize="20" 
                                                 FontWeight="Bold"
                                                 HorizontalAlignment="Left"
                                                 Margin="10"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1">
                                    <TextBlock Text="Số tiền nợ tối đa:"
                                               Foreground="#154448" FontSize="20" Margin="10,0,0,0"/>
                                        <TextBox x:Name="tbx_CustomerMaximumDebt"
                                                 Style="{StaticResource CustomerInfoTextBox}"
                                                 Width="150"
                                                 FontSize="20" 
                                                 FontWeight="Bold"
                                                 HorizontalAlignment="Left"
                                                 Margin="10"/>
                                    </StackPanel>

                                    <DockPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                        <TextBlock Text="Kiểm tra số tiền thu không vượt quá số tiền khách hàng đang nợ:"
                                                   Foreground="#154448" FontSize="20" Margin="10,0,0,0"/>
                                        <ToggleButton x:Name="tbt_CheckMoneyReceivedFromCustomer" Content="Toggle Button" 
                                                      HorizontalAlignment="Left" 
                                                      VerticalAlignment="Center"
                                                      Width="120" 
                                                      Height="30" 
                                                      Margin="10,0,0,0">
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="15">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>

                                    </DockPanel>
                                    
                                    


                                    

                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem> 
            </TabControl>
                
        </Grid>
    </Border>
</Window>